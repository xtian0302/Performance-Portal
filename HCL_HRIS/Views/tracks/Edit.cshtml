@model HCL_HRIS.Models.track

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>track</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.track_id)

        <div class="form-group">
            @Html.LabelFor(model => model.track_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.track_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.track_name, "", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            @Html.LabelFor(model => model.track_manager, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line ui-autocomplete-input" id="name_container" value="">
                @Html.EditorFor(model => model.track_manager, new { htmlAttributes = new { @class = "form-control hidden" } })
                @Html.ValidationMessageFor(model => model.track_manager, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>

    $(document).ready(function () {
        $("#name_container").val($("#track_manager").val());
        $("#name_container").autocomplete({
            minLength: 0,
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("GetUsers", "groups")',
                    success: function (data) {
                        response($.map(data, function (val, item) {
                            return {
                                label: val.sap_id+ " - " +val.name  ,
                                value: val.sap_id+ " - " +val.name  ,
                                id: val.user_id
                            }
                        }))
                    }
                })
            },
            select: function (event, ui) {
                 $('#track_manager').val(ui.item.id);
            }
        }).focus(function () {
            $(this).autocomplete('search', $(this).val())
        });
});

</script>