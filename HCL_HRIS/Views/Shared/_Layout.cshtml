@using System.Data;
@using System.Data.SqlClient;
@using System.Diagnostics;
@{
    var id = 0;
    var name = "";
    var team = "";
    var track = "";
    var role = "";
}
@{if (Request.IsAuthenticated)
    {
        {
            using (var cn = HCL_HRIS.Models.Utilities.getConn())
            {

                string _sql = @"SELECT usr.[name], usr.[user_id], gr.[group_name], tr.[track_name],usr.[user_role] FROM [dbo].[users] usr INNER JOIN [dbo].[group] gr ON usr.group_id=gr.group_id INNER JOIN [dbo].[track] tr ON gr.track_id=tr.track_id " +
                       @"WHERE [sap_id] = @u";
                Debug.WriteLine(User.Identity.Name);
                var cmd = new SqlCommand(_sql, cn);
                cmd.Parameters
                    .Add(new SqlParameter("@u", SqlDbType.Int))
                    .Value = Int32.Parse(User.Identity.Name);
                cn.Open();
                var reader = cmd.ExecuteReader();
                if (reader.HasRows)
                {
                    while (reader.Read())
                    {
                        name = reader.GetString(0);
                        id = reader.GetInt32(1);
                        team = reader.GetString(2);
                        track = reader.GetString(3);
                        role = reader.GetString(4);
                    }
                    reader.Dispose();
                    cmd.Dispose();
                }
                else
                {
                    reader.Dispose();
                    cmd.Dispose();
                }
            }

        }
    }
    else
    {
        try
        {
            Response.Redirect("~/users/Login");
        }
        catch (Exception e)
        {
            Response.Redirect("~/users/Login");
        }
    }
}
