@model HCL_HRIS.Models.user

@{
    ViewBag.Title = "Login";
    Layout = null;
    if (User.Identity.Name != "")
    {
        try
        {
            Response.Redirect("~/Home/Index");
        }
        catch (Exception e)
        {
            Response.Redirect("~/Home/Index");
        }
    }
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <style> 
    /*Helper for Vertical Align center Image*/
    .helper {
        display: inline-block;
        height: 100%;
        vertical-align: middle;
    }
    </style>

    <!-- Custom fonts for this template-->
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <title>DPL - Login</title>
    <!-- Custom styles for this template-->

    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block text-center">
                                <span class="helper"></span> 
                                <img src="~/Images/New Logo.png" style="border-radius:15px;padding-left:80px;vertical-align:middle;" />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <img src="~/Images/hcl.png" style="border-radius:15px;width:220px !important;vertical-align:middle;" />

                                        <h1 class="h4 text-gray-900 mb-4">Welcome to HCL <br />Production and Attendance Dashboard<br />Please Login Below :</h1>
                                    </div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.ValidationSummary(true, "Login failed. Check your login details.");
                                        <div class="form-group">

                                            @Html.TextBoxFor(u => u.sap_id, new { @class = "form-control form-control-user", @placeholder = "SAP Number", @required = "required" })
                                            @Html.ValidationMessageFor(u => u.sap_id)

                                        </div>
                                        <div class="form-group">

                                            @Html.PasswordFor(u => u.password, new { @class = "form-control form-control-user", @placeholder = "Password", @required = "required" })
                                            @Html.ValidationMessageFor(u => u.password)
                                        </div>
                                        <div class="form-group">
                                        </div>
                                        <input type="submit" value="Log In" class="btn btn-primary btn-user btn-block" />
                                        <hr>
                                    }
                                    @*<div class="text-center">
                                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/jquery.easing.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>
</body>

</html>
