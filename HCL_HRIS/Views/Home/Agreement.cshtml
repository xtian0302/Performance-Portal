@using System.Globalization;
@model HCL_HRIS.Models.user
@{
    ViewBag.Title = "Agreement";
}
<div class="row ">
    <div class="col-md-12" style="min-height:800px;padding:0px; border-radius:5px;">
        <div class="card" style="min-height:800px;padding:0px">
            <div class="card-header" style="padding:4.5px;">
                Agreement for Incentive Scheme
            </div>
            <div class="card-body" style="padding:3px;">

                <div style="height:800px;">
                    @if (Model.sub_department.Equals("PPMC") || Model.sub_department.Equals("PPMC IB/BPM") || Model.sub_department.Equals("PPMC IB L2") || Model.sub_department.Equals("PPMC BPM"))
                    {
                        <object data="../Files/PDF/PPMC.pdf" type="application/pdf" id="ScanPdf" width="100%" height="100%"></object>
                    }
                    else
                    {
                        <object data="../Files/PDF/SleepEQ.pdf" type="application/pdf" id="ScanPdf" width="100%" height="100%"></object>
                    }
                </div><br />
                <div class="row">
                    <div class="col-3">
                    </div>
                    <div class="col-9">
                        <p>I have read and Accept the Agreement for the Incentive Scheme</p>

                        <div class="row">
                            <div class="col-1">
                            </div>
                            <a href="@Url.Action("AgreementAccept","Home")"><button class="btn btn-primary"> Accept </button></a>
                            &nbsp;
                            <a href="@Url.Action("Logout","Users")"><button class="btn btn-danger"> Decline </button></a>
                        </div>
                        <br />
                        <span style="font-size:small;font-style:italic;"> *Declining the Agreement will log you out of the system</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
